/*
vim: syntax=groovy
-*- mode: groovy;-*-
 *  ----------------------------------------------------------------------------------
 *  Base config for using singularity
 *  Intended infrastucture: Any
 */

singularity {
  enabled = true
}

process {

  container = { "docker://remiolsen/ngi-neutronstar" }
  withName: supernova {
    container = { "docker://remiolsen/supernova" }
  }
  withName: supernova_version {
    container = { "docker://remiolsen/supernova" }
  }
  withName: mkoutput {
    container = { "docker://remiolsen/supernova" }
  }

}
